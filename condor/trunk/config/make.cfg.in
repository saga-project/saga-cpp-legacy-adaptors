# vim: ft=make

ifndef SAGA_ADAPTORS_CONDOR_MAKE_CFG_IN
       SAGA_ADAPTORS_CONDOR_MAKE_CFG_IN=yes


TMP_SAGA_LOCATION = @TMP_SAGA_LOCATION@
TMP_SAGA_INSTTYPE = @TMP_SAGA_INSTTYPE@

ifeq "$(TMP_SAGA_INSTTYPE)" "source"
  SAGA_ROOT              = $(TMP_SAGA_LOCATION)
  SAGA_MAKE_INCLUDE_ROOT = $(TMP_SAGA_LOCATION)/make
else
  SAGA_LOCATION          = $(TMP_SAGA_LOCATION)
  SAGA_MAKE_INCLUDE_ROOT = $(TMP_SAGA_LOCATION)/share/saga/make
endif


SAGA_HAVE_CONDOR         = @SAGA_HAVE_CONDOR@
SAGA_CONDOR_LOCATION     = @CONDOR_LOCATION@
SAGA_CONDOR_VERSION      = @CONDOR_VERSION@
SAGA_CONDOR_CONFIG       = @CONDOR_CONFIG@
SAGA_CONDOR_PATH         = @CONDOR_PATH@
SAGA_CONDOR_BIN_VERSION  = @CONDOR_BIN_VERSION@
SAGA_CONDOR_BIN_Q        = @CONDOR_BIN_Q@
SAGA_CONDOR_BIN_SUBMIT   = @CONDOR_BIN_SUBMIT@
SAGA_CONDOR_BIN_RM       = @CONDOR_BIN_RM@


SAGA_BUILD_ADAPTOR_JOB   = @BUILD_ADAPTOR_JOB@

include $(SAGA_MAKE_INCLUDE_ROOT)/saga.util.mk

endif # guard

