# vim: ft=make

ifndef SAGA_ADAPTORS_GLITE_MAKE_CFG_IN
       SAGA_ADAPTORS_GLITE_MAKE_CFG_IN=yes


TMP_SAGA_LOCATION = @TMP_SAGA_LOCATION@
TMP_SAGA_INSTTYPE = @TMP_SAGA_INSTTYPE@

ifeq "$(TMP_SAGA_INSTTYPE)" "source"
  SAGA_ROOT              = $(TMP_SAGA_LOCATION)
  SAGA_MAKE_INCLUDE_ROOT = $(TMP_SAGA_LOCATION)/make
else
  SAGA_LOCATION          = $(TMP_SAGA_LOCATION)
  SAGA_MAKE_INCLUDE_ROOT = $(TMP_SAGA_LOCATION)/share/saga/make
endif


SAGA_HAVE_GLITE         = @SAGA_HAVE_GLITE@
SAGA_GLITE_LOCATION     = @GLITE_LOCATION@
SAGA_GLITE_VERSION      = @GLITE_VERSION@
SAGA_GLITE_CONFIG       = @GLITE_CONFIG@
SAGA_GLITE_PATH         = @GLITE_PATH@
SAGA_GLITE_BIN_VERSION  = @GLITE_BIN_VERSION@
SAGA_GLITE_BIN_Q        = @GLITE_BIN_Q@
SAGA_GLITE_BIN_SUBMIT   = @GLITE_BIN_SUBMIT@
SAGA_GLITE_BIN_RM       = @GLITE_BIN_RM@


SAGA_BUILD_ADAPTOR_JOB   = @BUILD_ADAPTOR_JOB@

include $(SAGA_MAKE_INCLUDE_ROOT)/saga.util.mk

endif # guard

